{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "jsx": "react-native",
    "jsxImportSource": "nativewind",
    "baseUrl": ".",
    "strict": true,
    "paths": {
      "@/*": ["src/*"],
      "app/*": ["src/app/*"]
    },
    "typeRoots": ["./src/types"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "nativewind-env.d.ts",
    "**/*",
    "types/*.d.ts"
  ]
}
